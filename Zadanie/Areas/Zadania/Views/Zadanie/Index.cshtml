@model IEnumerable<Zadanie.Models.Dane>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Zadania/Views/Shared/_Zadanie.cshtml";
}
<h2 class="text-center">To Do - lista zadań</h2>
@Html.Partial("_BodyHeader")
@Html.Partial("_Menu")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.temat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.czynnosc)
        </th>
        <th>
            @Html.ActionLink("" + @Html.DisplayNameFor(model => model.data_rozpoczecia), "Index",new { sortBy = ViewBag.SortDataRozpoczeciaParameter })
        </th>
        <th>
            @Html.ActionLink("" + @Html.DisplayNameFor(model => model.data_zakonczenia), "Index", new { sortBy = ViewBag.SortDataZakonczeniaParameter })
        </th>
        <th>
            @Html.ActionLink("" + @Html.DisplayNameFor(model => model.status), "Index", new { sortBy = ViewBag.SortStatusParameter })
        </th>
        <th>
            @Html.ActionLink( ""+ @Html.DisplayNameFor(model => model.priorytet), "Index", new { sortBy = ViewBag.SortPriorytetParameter })

        </th>
        <th>
            @Html.DisplayNameFor(model => model.procent_zakonczenia)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.temat)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.czynnosc)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.data_rozpoczecia)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.data_zakonczenia)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.status)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.priorytet)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.procent_zakonczenia)
            </th>
            <th>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="checkbox_for_edit" value="@item.id" >
                    <label class="form-check-label" for="checkbox_for_edit">Checkbox</label>
                </div>
            </th>
            <th id="details-links">
                <button type="button">@Html.ActionLink("Szczegóły", "Details/" + item.id, null, new {  })</button>

            </th>
            <th>
                <button type="button">Przesuń</button>
            </th>
            <th>
                <button type="button">X</button>
            </th>

        </tr>
    }

</table>

